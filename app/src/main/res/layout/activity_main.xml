<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/heads"
        android:id="@+id/coinPic"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttonHolder"
        app:layout_constraintTop_toBottomOf="@+id/coinPic">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fej"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iras"
                />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dobasok: 0"
        android:id="@+id/DobasokText"
        app:layout_constraintTop_toBottomOf="@+id/buttonHolder"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyozelem: 0"
        android:id="@+id/GyozText"
        app:layout_constraintTop_toBottomOf="@+id/DobasokText"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vereseg: 0"
        android:id="@+id/VesztText"
        app:layout_constraintTop_toBottomOf="@id/GyozText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>